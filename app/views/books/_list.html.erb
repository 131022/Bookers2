<div class='col-xs-3'>
  <h2>User info</h2>
  <table class='table'>
    <tr><%= attachment_image_tag current_user, :profile_image, size: "100x100", fallback: "no_image.png" %></tr>
    <tr>
      <br>
  	  <th>name</th>
  	  <th><%= current_user.name %></th>
    </tr>
    <tr>
  	  <th>introduction</th>
  	  <th><%= current_user.introduction %></th>
    </tr>
  </table>

  <div class='row'>
    <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_26190" <%= link_to '', edit_user_path(current_user) %></a>


<div class="newbook">New book</div>
<!-- form_with部分 -->
<%= form_with model:book, local:true do |f| %>
  <% if book.errors.any? %>
    <h3><%= book.errors.count %> errors detected.</h3>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="heading"><strong>Title</strong></div>
  <div class="indextitle"><%= f.text_field :title, :size => "33px" %></div>

  <div class="heading"><strong>Opinion</strong></div>
  <div class="indextitle"><%= f.text_area :body, :size => "33px" %></div>

  <div class="actions row">
  <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" <%= f.submit 'Create Book' %>
  </div>
<% end %>
</div>
</div>


