<h2>User info</h2>
  <table class='table'>
    <tr><%= attachment_image_tag current_user, :profile_image %></tr>
    <tr>
  	  <th>name</th>
  	  <th><%= current_user.name %></th>
    </tr>
    <tr>
  	  <th>introduction</th>
  	  <th><%= current_user.introduction %></th>
    </tr>
  </table>

  <%= link_to 'edit', edit_user_registration_path %>

<h2><strong>New book</strong></h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors detected.</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="heading">Title</div>
  <div class="indextitle"><%= f.text_field :title %></div>

  <div class="heading">Body</div>
  <div class="indextitle"><%= f.text_area :body %></div>
  <%= f.submit 'Create Book' %>

<% end %>

<h2><strong>Books</strong></h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= attachment_image_tag book.user, :profile_image, size: "100x100", fallback: "no-image.png" %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>

</table>